{% extends 'MusicBundle::base.html.twig' %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/upload.css') }}" />

	<script type="text/javascript" src="{{ asset('js/vendor/jquery.ui.widget.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/vendor/jquery.iframe-transport.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/vendor/jquery.fileupload.js') }}"></script>

	<script type="text/javascript" src="{{ asset('js/progress_indicator.js') }}"></script>
	<script type="text/javascript" src="{{ asset('js/upload.js') }}"></script>
{% endblock %}

{% block topBar %}
	<a href="{{ path('phplayer_music_music_index') }}">Back</a>
{% endblock %}

{% block main %}
	<div class="uploadArea showMessage">
		<div class="albumArt"></div>
		<canvas id="progressIndicator" width="224" height="224"></canvas>
		<div id="inputs" class="inputs">
			<input id="artist" value="{{ artistName }}" />
			-
			<input id="album" value="{{ albumName }}" />
			<br>
			<button id="applyMove">APPLY</button>
		</div>
		<div id="files">
		</div>
	</div>
{% endblock %}
